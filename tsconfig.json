{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@configs/*": [
        "./config/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}