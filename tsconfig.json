{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": [
        "./controllers/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@usecases/*": [
        "./use-cases/*"
      ],
      "@entities/*": [
        "./entities/*"
      ],
      "@configs/*": [
        "./config/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}