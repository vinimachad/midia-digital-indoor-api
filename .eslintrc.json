{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        [
          "@shared",
          "./src/shared"
        ],
        [
          "@modules",
          "./src/modules"
        ],
        [
          "@configs",
          "./src/config"
        ]
      ]
    }
  }
}